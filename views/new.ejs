</head>
<body>
    <div id="main">
      <div id="header">
        <%- include("./partials/navbar.ejs")%>
      </div>

      <div id="slider">
        <div class="text-content">
            <h2 class="text-heading">Trăng Tàn Studio</h2>
            <div class="text-decription">Hút thuốc lá có thể gây ung thư phổi</div>
        </div>
    </div>

<!-- edit/delete button     -->
<a href="/edit_article/<%= data.id%>"><button>Edit</button></a>
<button onclick="delConfirm()">Remove</button>

        <div id="content">
            <article>
              <h1 class="titledetail">
                <%= data.a_name %>
              </h1>

              <div class="userdetail">
                <a href="https://www.facebook.com/thaianh.2611">Thai Duc Anh</a>

                <span>
                  <%= data.a_date %>
                </span>
              </div>
              <p><%- data.content %></p>
            </article>
        </div>
        </div>

        
        <!-- Script -->
<script>
  function delConfirm() {
  if(confirm("Do you want to delete this article?")){
    document.location.href = "/remove_article/<%= data.id %>";
  }
}
</script>

<!-- Footer -->
        <%- include("./partials/footer.ejs")%>;
