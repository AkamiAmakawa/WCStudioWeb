<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WCS-New Article</title>
    <link rel="stylesheet" href="/css/article_editor.css">
    <script src="https://cdn.ckeditor.com/ckeditor5/26.0.0/classic/ckeditor.js"></script>
</head>
<body>
    <div id="header">

        <%- include('./partials/navbar.ejs') %>

    </div>
    <div id="editor">
        <form action="/post" method="post">

            <!-- id for editing -->

            <input type="hidden" id = "article_id" name = "article_id" value = "<%= data.id %>"> 

            <!-- category select-->
            <label for = "category">Category: </label>
            <select id = "category" name = "category">
                <option value="news">News</option>
                <option value="about">About</option>
                <option value="story">Story</option>
            </select>
            
            <br><br>
            <!-- name input -->
            <label for = "name">Name: </label>
            <input type="text" id = "article_name" name = "article_name" required value = "<%= data.a_name %>">

            <br><br>

            <!-- content editor -->
            <div contenteditable="true" id = "article_content" name = "article_content" ><%- data.content %></div>
            <br>
            <p><input type="submit" value="Submit"></p>
        </form>
        <script>
            ClassicEditor
                .create( document.querySelector( '#article_content' ) )
                .catch( error => {
                    console.error( error );
                } );
        </script>
    </div>
</body>
</html>